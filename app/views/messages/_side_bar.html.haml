.sidebar
  .sidebar__name
    .sidebar__box
      .sidebar__user 
        = current_user.name
      %ul.sidebar__icons
        %li.icon-1
          = link_to new_group_path(current_user) do
            = icon('fas','edit',)
        %li.icon-2
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
  .sidebar__group
    - current_user.groups.each do |group|
      .sidebar__group__text
        = link_to group_messages_path(group) do
          .sidebar__group__name
            = group.name
          .sidebar__group__message
            = group.show_last_message

